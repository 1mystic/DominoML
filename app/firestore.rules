rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for saved ML models
    match /savedModels/{document} {
      // Users can only read and write their own models
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      // Users can create models with their own userId
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Rules for public models (if implemented in the future)
    match /publicModels/{document} {
      // Anyone can read public models
      allow read: if true;
      // Only authenticated users can create public models
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Only the owner can delete their public models
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
